<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_nav_graph"
    app:startDestination="@id/charactersListFragment">

    <fragment
        android:id="@+id/charactersListFragment"
        android:name="com.ermilova.android.ramguide.CharactersListFragment"
        android:label="@string/character_list"
        tools:layout="@layout/fragment_characters_list">
        <action
            android:id="@+id/action_charactersListFragment_to_characterDetailsFragment"
            app:destination="@id/characterDetailsFragment"></action>
    </fragment>
    <fragment
        android:id="@+id/characterDetailsFragment"
        android:name="com.ermilova.android.ramguide.CharacterDetailsFragment">
        <argument
            android:name="characterId"
            app:argType="long" />
    </fragment>
</navigation>